{
  "id": "/pod1",
  "scaling": {
    "kind": "fixed",
    "instances": 1
  },
  "containers": [
    {
      "name": "pod1",
      "exec": {
        "command": {
          "shell": "env & sleep 360000"
        }
      },
      "resources": {
        "cpus": 0.1,
        "mem": 16
      }
    }
  ],
  "networks": [
    {
      "mode": "host"
    }
  ]
}